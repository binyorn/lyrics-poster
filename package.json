{
	"name": "lyrics-poster",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"file-saver": "^1.3.8",
		"font-picker-react": "^2.0.3",
		"normalize.css": "^8.0.0",
		"prop-types": "^15.6.1",
		"react": "^16.3.1",
		"react-dom": "^16.3.1",
		"react-input-numeric": "^1.0.0",
		"react-magnifier": "^1.0.2",
		"react-redux": "^5.0.7",
		"react-scripts": "^1.1.4",
		"react-spinkit": "^3.0.0",
		"redux": "^3.7.2",
		"redux-logger": "^3.0.6",
		"redux-thunk": "^2.2.0"
	},
	"devDependencies": {
		"eslint": "^4.19.1",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-plugin-import": "^2.10.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-react": "^7.7.0",
		"husky": "^0.14.3",
		"node-sass": "^4.8.3",
		"npm-run-all": "^4.1.2",
		"stylelint": "^8.2.0",
		"stylelint-config-primer": "^2.2.6"
	},
	"scripts": {
		"start": "npm-run-all build:css --parallel start:*",
		"start:css": "node-sass src/styles -o src/styles -r --source-map true -w",
		"start:js": "react-scripts start",
		"build": "run-s build:*",
		"build:css": "node-sass src/styles -o src/styles -r --output-style compressed",
		"build:js": "react-scripts build",
		"lint": "run-s lint:*",
		"lint:css": "stylelint '**/*.scss' --syntax scss",
		"lint:js": "eslint .",
		"precommit": "npm run lint",
		"prepush": "npm run lint"
	}
}
